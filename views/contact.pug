//- page-a.pug
extends layout.pug

block scripts
  script(src='/static/script.js')

block style 
    style
        include ../static/style.css
        include ../static/styleContact.css

block content 
    h1 Contact Us

    form(action="/contact",method="post" class="form")

        label(for="firstname" class="l") First Name: 
            input(type="text" class="input" name='firstname' id='firstname'  placeholder='Enter Your First Name') 

        label(for="lastname" class="l") Last Name: 
            input(type="text" class="input" name='lastname' id='lastname' placeholder='Enter Your Last Name') 

        label(for="age" class="l") Age: 
            input(type="radio", name="age" id='male' value="male")
            label(for="male") Male
            input(type="radio", name="age" id='female' value="female")
            label(for="female") Female

        label(for="address" class="l") Address : 
            <textarea class="input" name="address" rows="10" cols="30" placeholder="Write Your Address..."></textarea>
            button(id="btn")    
                | Submit 
        